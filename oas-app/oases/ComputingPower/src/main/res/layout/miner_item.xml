<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mMinerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mMinerImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/onelevel" />

        <TextView
            android:id="@+id/mMinerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mMinerImage"
            android:gravity="center"
            android:text="一级矿机"
            android:textColor="@color/common_black"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/mMinerPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/mMinerImage"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:text="5,000,000"
            android:textColor="@color/common_green"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/mMinerImage"
            android:layout_marginEnd="28dp"
            android:gravity="center"
            android:text="OAS"
            android:textColor="@color/common_green"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mContent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mMinerName"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/mMinerImage"
            android:text="算力"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mCpomutingPowerValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mContent1"
            android:layout_alignTop="@+id/mContent1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="xxxx"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mContent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mMinerName"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/mCpomutingPowerValue"
            android:text="，时效"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mPrescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mContent1"
            android:layout_toRightOf="@+id/mContent2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="200"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mContent3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mContent1"
            android:layout_toRightOf="@+id/mPrescription"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="天，"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mContent4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mContent1"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/mMinerImage"
            android:text="最高每天可产生"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mMaxOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mContent4"
            android:layout_toRightOf="@+id/mContent4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="xxxxxxx"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/mContent5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mContent4"
            android:layout_toRightOf="@+id/mMaxOutput"
            android:text="OAS"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/mReduce1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mContent4"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/mMinerImage"
            android:src="@drawable/reduce1" />

        <TextView
            android:id="@+id/mNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mMinerImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="165dp"
            android:text="2000"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/mAdd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mMinerImage"
            android:layout_toStartOf="@+id/mMinerPrice"
            android:src="@drawable/add1" />

        <Button
            android:id="@+id/mBuyButton"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/mMinerImage"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:background="@drawable/authentication"
            android:text="购买"
            android:textColor="@color/common_white" />
    </RelativeLayout>
</FrameLayout>