<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/common_bg"
    tools:context=".ui.activity.InviteFriendsActivity">

    <com.oases.base.widgets.HeaderBar
        android:id="@+id/mHeadBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightText="分享"
        app:titleText="邀请好友" />
    <TextView
        android:id="@+id/mIdTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="1dp"
        android:visibility="visible"/>
    <com.oases.base.widgets.ViewInfoBar
        android:id="@+id/mInviteNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewName="已邀请好友数"
        app:viewValue="3">
    </com.oases.base.widgets.ViewInfoBar>
    <com.oases.base.widgets.ViewInfoBar
        android:id="@+id/mTotalLift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewName="累计提升算力"
        app:viewValue="315">
    </com.oases.base.widgets.ViewInfoBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_energy"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:id="@+id/mQrCodeImage"
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@color/common_white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/mInviteName"
                    style="@style/WrapWrap"
                    android:layout_width="76dp"
                    android:layout_height="26dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="您的邀请码"
                    android:gravity="center"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_small_size" />
                <TextView
                    android:id="@+id/mInviteNumberTv"
                    style="@style/WrapWrap"
                    android:layout_width="105dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/mInviteName"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-3dp"
                    android:textColor="@color/common_green"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/mInviteQrCode"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="50dp"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="230dp"
                    android:gravity="center"
                    android:text="扫描下载OASES"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="260dp"
                    android:textSize="12dp"
                    android:text="分享您的二维码给好友，好友通过扫码下载APP后您可以获得算力提升"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>