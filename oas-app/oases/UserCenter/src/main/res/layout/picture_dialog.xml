<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/mUserInfoQrCode"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_margin="50dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/mMinerCancel"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/authentication"
            android:textColor="@color/common_white"
            android:layout_marginLeft="30dp"
            android:text="取消"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/mMinerC"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/mMinerCancel"
            android:background="@drawable/authentication"
            android:textColor="@color/common_white"
            android:layout_marginLeft="20dp"
            android:text="旋转"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/mMinerConfirm"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/mMinerC"
            android:background="@drawable/authentication"
            android:textColor="@color/common_white"
            android:layout_marginLeft="20dp"
            android:text="确定"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>