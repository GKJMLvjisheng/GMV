<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">
    <View
        android:layout_width="260dp"
        android:layout_height="20dp"
        android:textSize="20dp" />
   <!-- <TextView
        android:id="@+id/mtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="请您输入账户密码"
        android:textColor="@color/common_black"
        android:textSize="18dp" />-->

    <EditText
        android:id="@+id/mPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/key_selector"
        android:gravity="center"
        android:hint="请输入您的账户密码"
        android:imeActionId="6"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mtitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/mCancelBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@drawable/qb2"
            android:textColor="@color/common_white"
            android:text="取消"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/mSubmitBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/mCancelBtn"
            android:background="@drawable/qb2"
            android:textColor="@color/common_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="提交"
            android:textSize="12dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <View
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/mMinerCancel"
        android:textSize="20dp" />
</LinearLayout>