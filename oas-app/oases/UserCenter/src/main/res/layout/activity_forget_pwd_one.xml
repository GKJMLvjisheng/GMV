<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ForgetPwdOneActivity">

    <com.oases.base.widgets.HeaderBar
        android:id="@+id/mHeadBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.oases.base.widgets.HeaderBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="请输入OAS账号所绑定的手机号"
        android:textColor="@color/common_black"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="手机号码"
        android:layout_marginLeft="30dp"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="+86"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/mOriginalPhoneNumber"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/common_green"
            android:textSize="20dp" />
    </LinearLayout>
    <Button
        android:id="@+id/mForgetPwdOneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="下一步"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@null"
        android:textColor="@color/common_green" />

</LinearLayout>