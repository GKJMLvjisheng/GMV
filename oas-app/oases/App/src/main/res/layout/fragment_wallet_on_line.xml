<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/mFragmentScrollView"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/mOasHeadLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            app:contentScrim="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            android:background="@color/common_bg"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
            <FrameLayout
                android:id="@+id/mOasHead"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:background="@drawable/bg_oas">
                <TextView
                    android:id="@+id/mCurrentPointsTag"
                    android:textSize="19sp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="38dp"
                    android:layout_alignParentStart="true"
                    android:text="当前代币OAS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"/>
                <TextView
                    android:id="@+id/mCurrentPoints"
                    android:textSize="46sp"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"/>
                <TextView
                    android:id="@+id/mOngoingTransactionTag"
                    android:textSize="@dimen/text_big_size"
                    android:text="待确认交易 OAS"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="119dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"/>
                <TextView
                    android:id="@+id/mOngoingTransaction"
                    android:textSize="@dimen/text_big_size"
                    android:paddingRight="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="119dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mOasLayout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="169dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corner_white">
                <ImageView
                    android:id="@+id/mIconIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_oas"/>
                <TextView
                    android:id="@+id/mOasTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mIconIv"
                    android:layout_marginTop="8dp"
                    android:lines="1"
                    android:text="OAS"
                    android:textColor="@color/common_black"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/mOasValue"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_black"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mOasHeadLayout"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                app:layout_collapseMode="pin"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/mRedrawOas"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw_name"
                        android:textColor="@color/common_white"
                        android:background="@drawable/button_tb"
                        />
                    <Button
                        android:id="@+id/mExchangeBtn"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:text="@string/user_wallet_name"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/common_white"
                        android:background="@drawable/button_tb"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mExchangeRecord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="交易记录"
                        android:textSize="@dimen/text_big_size"
                        android:textColor="@color/common_black"/>

                    <TextView
                        android:id="@+id/mMoreWalletDetail"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="10dp"
                        android:text="更多"
                        android:textSize="13dp" />
                </RelativeLayout>
            </LinearLayout>
            </FrameLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/mToolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/common_white"
                android:gravity="center"
                app:contentInsetStart="0dp"
                android:background="@color/common_green"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="交易记录"
                    android:textColor="@color/common_white"/>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/walletOnRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v7.widget.RecyclerView>
</android.support.design.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/mBottomShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="正在加载..."
        android:visibility="invisible"
        android:textSize="13dp" />
</RelativeLayout>