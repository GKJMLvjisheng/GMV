<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@drawable/bg_oas">
        <TextView
            android:id="@+id/mCurrentPointsTag"
            android:textSize="19sp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="38dp"
            android:layout_alignParentStart="true"
            android:text="当前代币OAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white"/>
        <TextView
            android:id="@+id/mCurrentPoints"
            android:textSize="46sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white"/>
        <TextView
            android:id="@+id/mOngoingTransactionTag"
            android:textSize="@dimen/text_big_size"
            android:text="待确认交易 OAS"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="119dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white"/>
        <TextView
            android:id="@+id/mOngoingTransaction"
            android:textSize="@dimen/text_big_size"
            android:paddingRight="38dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="119dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mOasLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="169dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_corner_white">
        <ImageView
            android:id="@+id/mIconIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/icon_oas"/>
        <TextView
            android:id="@+id/mOasTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mIconIv"
            android:layout_marginTop="13dp"
            android:lines="1"
            android:text="OAS"
            android:textColor="@color/common_black"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/mOasValue"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_black"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>