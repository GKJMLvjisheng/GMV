<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    style="@style/MeItemStyle"
    android:layoutDirection="ltr">

    <TextView
        android:id="@+id/mName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="OEM 手环"
        android:textSize="@dimen/text_big_size"/>
    <TextView
        android:id="@+id/mDate"
        android:layout_below="@+id/mName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-8-23"
        android:textSize="@dimen/text_small_size"
        android:textColor="@color/text_dark"/>
    <TextView
        android:id="@+id/mPoints"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 6000"
        android:textSize="@dimen/text_big_size"
        android:textColor="@color/common_green"/>
    <TextView
        android:id="@+id/mEarnDetail"
        android:layout_below="@+id/mPoints"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="步行6000步"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_small_size"/>
</RelativeLayout>
