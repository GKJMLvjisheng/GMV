<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    android:paddingVertical="15dp"
    android:background="@color/common_white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/mLeftTopTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_big_size"
        android:textColor="@color/common_black" />

    <TextView
        android:id="@+id/mRightTopTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_big_size"
        android:textColor="@color/common_black"
        android:drawableRight="@drawable/right"/>

    <TextView
        android:id="@+id/mLeftBottomTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mLeftTopTv"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_small_size" />

    <TextView
        android:id="@+id/mRightBottomTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mRightTopTv"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_small_size" />

    <TextView
        android:id="@+id/mRightBottomValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mRightTopTv"
        android:layout_toLeftOf="@+id/mRightBottomTv"
        android:textSize="@dimen/text_small_size" />
</RelativeLayout>