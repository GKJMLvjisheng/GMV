<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.energy.mapper.EnergySourcePointMapper">
    <resultMap id="BaseResultMap" type="com.cascv.oas.server.energy.model.EnergySourcePoint">
        <id column="uuid" property="uuid"/>
        <result column="source_code" property="sourceCode"/>
        <result column="source_name" property="sourceName"/>
        <result column="type" property="type"/>
        <result column="point_single"  property="pointSingle"/>
        <result column="point_increase_speed"  property="pointIncreaseSpeed"/>
        <result column="point_increase_speed_unit"  property="pointIncreaseSpeedUnit"/>
        <result column="point_capacity_each_ball"  property="pointCapacityEachBall"/>
    </resultMap>

    <sql id="Base_Column_List">
        uuid, source_code, source_name, type, point_single, point_increase_speed, point_increase_speed_unit,  point_capacity_each_ball
    </sql>

    <select id="queryBySourceCode" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from energy_source_point
        <where>
            <if test="sourceCode != null">
                source_code = #{sourceCode}
            </if>
        </where>
    </select>

    <!-- 查询对应来源的一次性积分属性 -->
  <select id="queryPointSingle" resultType="java.math.BigDecimal">
    select point_single from energy_source_point where source_code = #{sourceCode}
  </select>
</mapper>