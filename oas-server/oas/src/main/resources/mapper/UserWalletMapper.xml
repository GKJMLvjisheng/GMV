<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.blockchain.mapper.UserWalletMapper">

  <resultMap id="userWalletMap" type="com.cascv.oas.server.blockchain.model.UserWallet">
	<id column="uuid" property="uuid" />
	<result column="user_uuid" property="userUuid"/>
	<result column="balance" property="balance"/>
	<result column="created" property="created"/>
	<result column="updated" property="updated"/>
	<result column="unconfirmed_balance" property="unconfirmedBalance"/>
  </resultMap>
  
  <sql id="Base_Column_List">
    uuid, user_uuid, balance,created,updated,unconfirmed_balance
  </sql>
   
  <!-- insert user -->
  <insert id="insertSelective" parameterType="com.cascv.oas.server.blockchain.model.UserWallet">
    insert into user_wallet(
      uuid,
    	user_uuid,
    	balance,
    	created,
    	updated
	)  values (
    #{uuid,jdbcType=VARCHAR},
		#{userUuid,jdbcType=VARCHAR},
		#{balance,jdbcType=BIGINT},
		#{created,jdbcType=VARCHAR},
		#{updated,jdbcType=VARCHAR}
	)
  </insert>

  <!-- delete by uuid -->
  <delete id="deleteByUuid">
    delete from user_wallet where uuid = #{uuid}
  </delete>

  <!-- delete by userUuid -->
  <delete id="deleteByUserUuid">
    delete from user_wallet where user_uuid = #{userUuid}
  </delete>
  
  <select id="selectByUuid" parameterType="java.lang.String" resultMap="userWalletMap">
  	select 
      <include refid="Base_Column_List" />
    from user_wallet where uuid = #{uuid}
  </select>

  <select id="selectByUserUuid" parameterType="java.lang.String" resultMap="userWalletMap">
  	select 
      <include refid="Base_Column_List" />
    from user_wallet where user_uuid = #{userUuid}
  </select>
  <update id="increaseBalance">
  	update user_wallet set balance=balance + #{value} where uuid = #{uuid}
  </update>
  <update id="decreaseBalance">
  	update user_wallet set balance=balance - #{value} where uuid = #{uuid}
  </update>
  
  <update id="changeBalanceAndUnconfimed">
  	update user_wallet
  	 <set>
      <if test="value != null" >
        balance = #{value,jdbcType=DECIMAL},
      </if>
      <if test="unValue != null">
        unconfirmed_balance = #{unValue,jdbcType=DECIMAL},
      </if>
      <if test="updated != null" >
        updated = #{updated,jdbcType=VARCHAR},
      </if>
     </set>
    where user_uuid = #{userUUid,jdbcType=VARCHAR}
  </update>
  
  <select id="getSystemWallet" resultMap="userWalletMap">
  	select  <include refid="Base_Column_List" />
  	from user_wallet where user_uuid = (select uuid from user_info where name='SYSTEM')
  </select>
</mapper>