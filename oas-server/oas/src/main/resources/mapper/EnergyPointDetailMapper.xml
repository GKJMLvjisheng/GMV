<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.blockchain.mapper.EnergyPointDetailMapper">

  <resultMap id="energyPonitDetailMap" type="com.cascv.oas.server.blockchain.model.EnergyPointDetail">
	<id column="uuid" property="uuid" />
	<result column="user_uuid" property="userUuid"/>
	<result column="value" property="value"/>
	<result column="category" property="category"/>
	<result column="source" property="source"/>
	<result column="activity" property="activity"/>
	<result column="comment" property="comment"/>
	<result column="created" property="created"/>
  </resultMap>
  
  <sql id="Base_Column_List">
    uuid, user_uuid, value, category, source,activity,comment, created
  </sql>
  
  
  <!-- insert user -->
  <insert id="insertSelective" parameterType="com.cascv.oas.server.blockchain.model.EnergyPointDetail">
    insert into energy_point_detail
    <trim prefix="(" suffix=")" suffixOverrides=",">
    	uuid,
    	user_uuid,
    	value,
    	<if test="category != null">
    		category,
    	</if>
    	<if test="source != null">
    		source,
    	</if>
    	<if test="activity != null">
    		activity,
    	</if>
    	<if test="comment != null">
    		comment,
    	</if>
    	created
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
        #{uuid,jdbcType=VARCHAR},
        #{userUuid,jdbcType=VARCHAR},
		#{value,jdbcType=INTEGER},
    	<if test="category != null">
    		#{category,jdbcType=VARCHAR},
    	</if>
    	<if test="source != null">
    		#{source,jdbcType=VARCHAR},
    	</if>
    	<if test="activity != null">
    		#{activity,jdbcType=VARCHAR},
    	</if>
    	<if test="comment != null">
    		#{comment,jdbcType=VARCHAR},
    	</if>
    		#{created,jdbcType=VARCHAR}
    </trim>
  </insert>

  <!-- delete by id -->
  <delete id="deleteByUuid">
    delete from energy_point_detail where uuid = #{uuid}
  </delete>

  <!-- delete by userUuid -->
  <delete id="deleteByUserUuid">
    delete from energy_point_detail where user_uuid = #{userUuid}
  </delete>
  
  <select id="selectByDateRange" resultMap="energyPonitDetailMap">
  	select 
      <include refid="Base_Column_List" />
    from energy_point_detail where user_uuid = #{userUuid} and created between #{fromDate} and #{toDate} ordered by created desc;
  </select>

  <select id="selectByUserUuid" parameterType="java.lang.String" resultMap="energyPonitDetailMap">
  	select 
      <include refid="Base_Column_List" />
    from energy_point_detail where user_uuid = #{userUuid}
  </select>
  
</mapper>



  
  