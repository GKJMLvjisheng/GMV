<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.energy.mapper.UserEnergyMapper">
    <resultMap id="BaseResultMap" type="com.cascv.oas.server.energy.model.EnergyTradeRecord">
        <id column="uuid" jdbcType="VARCHAR" property="uuid" />
        <result column="user_uuid" jdbcType="VARCHAR" property="userUuid" />
        <result column="energy_ball_uuid" jdbcType="VARCHAR" property="energyBallUuid" />
        <result column="in_or_out" javaType="INTEGER" property="inOrOut" />
        <result column="point_change" jdbcType="DECIMAL" property="pointChange"/>
        <result column="power_change" jdbcType="DECIMAL" property="powerChange"/>
        <result column="status" javaType="INTEGER" property="status" />
        <result column="time_created" jdbcType="VARCHAR" property="timeCreated"/>
        <result column="time_updated" jdbcType="VARCHAR" property="timeUpdated"/>
    </resultMap>

    <sql id="Base_Column_List">
        uuid, user_uuid, energy_ball_uuid, in_or_out, point_change, power_change, status, time_created, time_updated
    </sql>
    <select id="selectByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from user_energy u order by time_created desc
    </select>

    <insert id="insertUserEnergy" parameterType="com.cascv.oas.server.energy.model.EnergyTradeRecord">
        insert into user_energy (uuid, user_uuid, energy_ball_uuid, balance_point, balance_power, time_created, time_updated )
        values (#{uuid,jdbcType=VARCHAR}, #{userUuid,jdbcType=VARCHAR}, #{energyBallUuid,jdbcType=VARCHAR},
        #{balancePoint,jdbcType=DECIMAL}, #{balancePower,jdbcType=DECIMAL}, #{timeCreated,jdbcType=VARCHAR},
        #{timeUpdated,jdbcType=VARCHAR})
    </insert>
</mapper>