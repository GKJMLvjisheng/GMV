<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.blockchain.mapper.EnergyPointMapper">

  <resultMap id="energyPonitMap" type="com.cascv.oas.server.blockchain.model.EnergyPoint">
	<id column="uuid" property="uuid" />
	<result column="user_uuid" property="userUuid"/>
	<result column="balance" property="balance"/>
	<result column="power" property="power"/>
	<result column="created" property="created"/>
	<result column="updated" property="updated"/>
  </resultMap>
  
  <sql id="Base_Column_List">
    uuid, user_uuid, balance,power, created,updated
  </sql>
  
  
  <!-- insert user -->
  <insert id="insertSelective" parameterType="com.cascv.oas.server.blockchain.model.EnergyPoint">
    insert into energy_point(
      uuid,
    	user_uuid,
    	balance,
    	power,
    	created,
    	updated
	)  values (
    #{uuid,jdbcType=VARCHAR},
		#{userUuid,jdbcType=VARCHAR},
		#{balance,jdbcType=BIGINT},
		#{power,jdbcType=INTEGER},
		#{created,jdbcType=VARCHAR},
		#{updated,jdbcType=VARCHAR}
	)
  </insert>

  <!-- delete by uuid -->
  <delete id="deleteByUuid">
    delete from energy_point where uuid = #{uuid}
  </delete>

  <!-- delete by userId -->
  <delete id="deleteByUserUuid">
    delete from energy_point where user_uuid = #{userUuid}
  </delete>
  
  <select id="selectByUuid" parameterType="java.lang.String" resultMap="energyPonitMap">
  	select 
      <include refid="Base_Column_List" />
    from energy_point where uuid = #{uuid}
  </select>

  <select id="selectByUserUuid" parameterType="java.lang.String" resultMap="energyPonitMap">
  	select 
      <include refid="Base_Column_List" />
    from energy_point where user_uuid = #{userUuid}
  </select>
  
  <update id="increaseBalance">
  	update energy_point set balance=balance + #{value} where uuid = #{uuid}
  </update>
  
  <update id="decreaseBalance">
  	update energy_point set balance=balance - #{value} where uuid = #{uuid}
  </update>
  
  <update id="increasePower">
  	update energy_point set power=power + #{value} where uuid = #{uuid}
  </update>
  
  <update id="decreasePower">
  	update energy_point set power=power - #{value} where uuid = #{uuid}
  </update>
  
  
</mapper>