<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.user.mapper.UserModelMapper">

  <resultMap id="userModelMap" type="com.cascv.oas.server.user.model.UserModel">
	<id column="id" property="id" />
	<result column="name" property="name"/>
	<result column="nickname" property="nickname"/>
	<result column="password" property="password"/>
    <result column="invite_from" property="inviteFrom"/>
	<result column="invite_code" property="inviteCode"/>
	<result column="gender" property="gender"/>
	<result column="birthday" property="birthday"/>
	<result column="address" property="address"/>
	<result column="mobile" property="mobile"/>
	<result column="email" property="email"/>
	<result column="salt" property="salt"/>
	<result column="uuid" property="uuid"/>
	<result column="created" property="created"/>
	<result column="updated" property="updated"/>
  </resultMap>
 
  <sql id="Base_Column_List">
    id, name, nickname,password,invite_from,invite_code, gender, birthday, address, mobile, email, salt,uuid,created,updated
  </sql>
  
  <!-- insert user -->
  <insert id="insertUser" parameterType="com.cascv.oas.server.user.model.UserModel">
    <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into user_info
    <trim prefix="(" suffix=")" suffixOverrides=",">
      name,
      password,
      salt,
      <if test="nickname != null">
        nickname,
      </if>
      <if test="inviteFrom != null">
        invite_from,
      </if>
      <if test="inviteCode != null">
        invite_code,
      </if>
      <if test="gender != null">
        gender,
      </if>
      <if test="birthday != null">
        birthday,
      </if>
      <if test="address != null">
        address,
      </if>
      <if test="mobile != null">
        mobile,
      </if>
      <if test="email != null">
        email,
      </if>
      <if test="uuid != null">
        uuid,
      </if>
      <if test="updated != null">
        updated,
      </if>
      <if test="created != null">
        created,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      #{name,jdbcType=VARCHAR},
      #{password,jdbcType=VARCHAR},
      #{salt,jdbcType=VARCHAR},
      <if test="nickname != null">
        #{nickname,jdbcType=VARCHAR},
      </if>
      
      <if test="inviteFrom != null">
        #{inviteFrom,jdbcType=VARCHAR},
      </if>
      <if test="inviteCode != null">
        #{inviteCode,jdbcType=VARCHAR},
      </if>
      <if test="gender != null">
        #{gender,jdbcType=VARCHAR},
      </if>
      <if test="birthday != null">
        #{birthday,jdbcType=VARCHAR},
      </if>
      <if test="address != null">
        #{address,jdbcType=VARCHAR},
      </if>
      <if test="mobile != null">
        #{mobile,jdbcType=VARCHAR},
      </if>
      <if test="email != null">
        #{email,jdbcType=VARCHAR},
      </if>
      <if test="uuid != null">
        #{uuid,jdbcType=VARCHAR},
      </if>
      <if test="updated != null">
        #{updated,jdbcType=VARCHAR},
      </if>
      <if test="created != null">
        #{created,jdbcType=VARCHAR}
      </if>
    </trim>
   </insert>

  <!-- delete user -->
  <delete id="deleteUser" parameterType="java.lang.Integer">
    delete from user_info where id = #{id}
  </delete>

  <select id="selectByName" parameterType="java.lang.String" resultType="com.cascv.oas.server.user.model.UserModel">
  	select 
  	<include refid="Base_Column_List" />
  	from user_info where name=#{name}
  </select>

  <select id="selectByUuid" parameterType="java.lang.String" resultType="com.cascv.oas.server.user.model.UserModel">
  	select 
  	<include refid="Base_Column_List" />
  	from user_info where uuid=#{uuid}
  </select>
  
  <select id="selectByInviteCode" parameterType="java.lang.String" resultMap="userModelMap">
  	select 
  	<include refid="Base_Column_List" />
  	from user_info where invite_code=#{inviteCode}
  </select>

</mapper>

