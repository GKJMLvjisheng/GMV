<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.mapper.UserModelMapper">

  <resultMap id="userModelMap" type="com.cascv.oas.server.user.model.UserModel">
	<id column="id" property="id" />
	<result column="name" property="name"/>
	<result column="nickname" property="nickname"/>
	<result column="password" property="password"/>
  </resultMap>
  
  <!-- insert user -->
  <insert id="insertUser" parameterType="com.cascv.oas.server.user.model.UserModel">
    <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into user_info(name,nickname,password,salt) 
     	values 
     (#{name,jdbcType=VARCHAR},#{nickname,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{salt,jdbcType=VARCHAR})
  </insert>

  <!-- delete user -->
  <delete id="deleteUser">
    delete from user_info where id = #{id}
  </delete>

  <select id="selectByName" parameterType="java.lang.String" resultType="com.cascv.oas.server.user.model.UserModel">
  	select id,name,nickname, password from user_info where name=#{name}
  </select>

</mapper>

