<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.user.mapper.UserModelMapper">

  <resultMap id="userModelMap" type="com.cascv.oas.server.user.model.UserModel">
	<id column="id" property="id" />
	<result column="name" property="name"/>
	<result column="nickname" property="nickname"/>
	<result column="password" property="password"/>
	<result column="salt" property="salt"/>
	<result column="uuid" property="uuid"/>
	<result column="created" property="created"/>
	<result column="updated" property="updated"/>
  </resultMap>
 
  <sql id="Base_Column_List">
    id, name, nickname,password,salt,uuid,created,updated
  </sql>
  
  <!-- insert user -->
  <insert id="insertUser" parameterType="com.cascv.oas.server.user.model.UserModel">
    <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into user_info
    <trim prefix="(" suffix=")" suffixOverrides=",">
      name,
      password,
      salt,
      <if test="nickname != null">
        nickname,
      </if>
      <if test="uuid != null">
        uuid,
      </if>
      <if test="updated != null">
        updated,
      </if>
      <if test="created != null">
        created,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      #{name,jdbcType=VARCHAR},
      #{password,jdbcType=VARCHAR},
      #{salt,jdbcType=VARCHAR},
      <if test="nickname != null">
        #{nickname,jdbcType=VARCHAR},
      </if>
      <if test="uuid != null">
        #{uuid,jdbcType=VARCHAR},
      </if>
      <if test="updated != null">
        #{updated,jdbcType=VARCHAR}
      </if>
      <if test="created != null">
        #{created,jdbcType=VARCHAR}
      </if>
    </trim>
   </insert>

  <!-- delete user -->
  <delete id="deleteUser" parameterType="java.lang.Integer">
    delete from user_info where id = #{id}
  </delete>

  <select id="selectByName" parameterType="java.lang.String" resultType="com.cascv.oas.server.user.model.UserModel">
  	select 
  	<include refid="Base_Column_List" />
  	from user_info where name=#{name}
  </select>

  <select id="selectByUuid" parameterType="java.lang.String" resultType="com.cascv.oas.server.user.model.UserModel">
  	select 
  	<include refid="Base_Column_List" />
  	from user_info where uuid=#{uuid}
  </select>

</mapper>

