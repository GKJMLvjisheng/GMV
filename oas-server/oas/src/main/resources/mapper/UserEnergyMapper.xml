<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.energy.mapper.UserEnergyMapper">
    <resultMap id="BaseResultMap" type="com.cascv.oas.server.energy.model.UserEnergy">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="energy_ball_id" jdbcType="INTEGER" property="energyBallId"/>
        <result column="balance_point" jdbcType="DECIMAL" property="balancePoint"/>
        <result column="balance_power" jdbcType="DECIMAL" property="balancePower"/>
        <result column="time_created" jdbcType="TIMESTAMP" property="timeCreated"/>
        <result column="time_updated" jdbcType="TIMESTAMP" property="timeUpdated"/>
    </resultMap>
    <select id="selectByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from user_energy u order by time_created desc
    </select>

    <insert id="insertUserEnergy" useGeneratedKeys="true" keyProperty="id" parameterType="com.cascv.oas.server.energy.model.UserEnergy">
        insert into user_energy (user_id,  energy_ball_id, balance_point, balance_power, time_created, time_updated )
        values (#{userId,jdbcType=INTEGER}, #{energyBallId,jdbcType=INTEGER},
        #{balancePoint,jdbcType=DECIMAL}, #{balancePower,jdbcType=DECIMAL}, #{timeCreated,jdbcType=TIMESTAMP},
        #{timeUpdated,jdbcType=TIMESTAMP})
    </insert>
</mapper>