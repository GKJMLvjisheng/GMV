<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.mapper.UserEnergyMapper">
  <resultMap id="BaseResultMap" type="com.cascv.oas.server.energy.model.UserEnergy">
    <id column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="current_point" jdbcType="INTEGER" property="currentPoint" />
    <result column="current_power" jdbcType="INTEGER" property="currentPower" />
  </resultMap>

  <select id="selectByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select * from user_energy where userId = #{id,jdbcType=INTEGER}
  </select>

  <select id="selectByCheckinSource" resultMap="BaseResultMap">
    select point_single,power_single from energy_source_point pt inner join energy_source_power pw on pt.source_code = pw.source_code = 1
  </select>
</mapper>