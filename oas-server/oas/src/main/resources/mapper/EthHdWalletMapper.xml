<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.blockchain.mapper.EthHdWalletMapper">

  <resultMap id="ethHdWalletMap" type="com.cascv.oas.server.blockchain.model.EthHdWallet">
	<id column="id" property="id" />
	<result column="user_id" property="userId"/>
	<result column="private_key" property="privateKey"/>
	<result column="public_key" property="publicKey"/>
	<result column="mnemonic" property="mnemonicList"/>
	<result column="mnemonic_path" property="mnemonicPath"/>
	<result column="address" property="address"/>
	<result column="keystore" property="keystore"/>
	<result column="created" property="created"/>
	<result column="updated" property="updated"/>
  </resultMap>
  
  <sql id="Base_Column_List">
    id, user_id, private_key, public_key, mnemonic, mnemonic_path, address, keystore,created,updated
  </sql>
  
  
  <!-- insert user -->
  <insert id="insertSelective" parameterType="com.cascv.oas.server.blockchain.model.EthHdWallet">
    <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into eth_wallet(
    	user_id,
    	private_key,
    	public_key,
    	mnemonic,
    	mnemonic_path,
    	address,
    	keystore,
    	created,
    	updated
	)  values (
		#{userId,jdbcType=INTEGER},
		#{privateKey,jdbcType=VARCHAR},
		#{publicKey,jdbcType=VARCHAR},
		#{mnemonicList,jdbcType=VARCHAR},
		#{mnemonicPath,jdbcType=VARCHAR},
		#{address,jdbcType=VARCHAR},
		#{keystore,jdbcType=VARCHAR},
		#{created,jdbcType=VARCHAR},
		#{updated,jdbcType=VARCHAR}
	)
  </insert>

  <!-- delete by id -->
  <delete id="deleteById">
    delete from eth_wallet where id = #{id}
  </delete>

<!-- delete by userId -->
  <delete id="deleteByUserId">
    delete from eth_wallet where user_id = #{userId}
  </delete>
  
  <select id="selectById" parameterType="java.lang.Integer" resultType="com.cascv.oas.server.blockchain.model.EthHdWallet">
  	select 
      <include refid="Base_Column_List" />
    from eth_wallet where id = #{id}
  </select>

  <select id="selectByUserId" parameterType="java.lang.Integer" resultType="com.cascv.oas.server.blockchain.model.EthHdWallet">
  	select 
      <include refid="Base_Column_List" />
    from eth_wallet where user_id = #{userId}
  </select>
</mapper>