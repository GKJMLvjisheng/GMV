<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.blockchain.mapper.EthConfigMapper">

  <resultMap id="ethConfigMap" type="com.cascv.oas.server.blockchain.model.EthConfigModel">
	<id column="id" property="id" />
	<result column="active_network" property="activeNetwork"/>
	<result column="tx_interval" property="txInterval"/>
  </resultMap>
  
  <sql id="Base_Column_List">
    id, active_network, tx_interval
  </sql>

  
  <!-- insert selective -->
  <insert id="insertSelective" parameterType="com.cascv.oas.server.blockchain.model.EthConfigModel">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
      SELECT LAST_INSERT_ID()
    </selectKey>

    insert into eth_config
      <trim prefix="(" suffix=")" suffixOverrides=",">
          
          <if test="activeNetwork != null">
            active_network,
          </if>
          <if test="txInterval != null">
            tx_interval,
          </if>
      </trim>
      <trim prefix="values (" suffix=")" suffixOverrides=",">
       	<if test="activeNetwork != null">
       		#{activeNetwork,jdbcType=VARCHAR},
       	</if>  	
       	<if test="txInterval != null">
       		#{tx_interval,jdbcType=INTEGER},
       	</if> 
      </trim>
  </insert>
 
  <select id="selectOne" parameterType="java.lang.String" resultMap="ethConfigMap">
  	select 
      <include refid="Base_Column_List" />
    from eth_config order by id limit 0, 1
  </select>

  <update id="update" parameterType="com.cascv.oas.server.blockchain.model.EthConfigModel">
	update eth_config 
	<trim prefix=" set " suffix="" suffixOverrides=",">
		<if test = "activeNetwork != null">
			active_network = #{activeNetwork},
		</if>
		<if test = "txInterval != null">
			tx_interval = #{txInterval},
		</if>
	</trim>
	where id = #{id}
  </update>

  <!-- delete by id -->
  <delete id="deleteById">
    delete from eth_config where id = #{id}
  </delete>


</mapper>