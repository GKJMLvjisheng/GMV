<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.energy.mapper.EnergyBallMapper">
    <resultMap id="BaseResultMap" type="com.cascv.oas.server.energy.model.EnergyBall">
        <id column="uuid" jdbcType="VARCHAR" property="uuid"/>
        <result column="user_uuid" jdbcType="VARCHAR" property="userUuid" />
        <result column="point_source" jdbcType="INTEGER" property="pointSource" />
        <result column="point" jdbcType="DECIMAL" property="point"/>
        <result column="power_source" jdbcType="INTEGER" property="powerSource"/>
        <result column="power" jdbcType="DECIMAL" property="power"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="time_created" jdbcType="VARCHAR" property="timeCreated"/>
        <result column="time_updated" jdbcType="VARCHAR" property="timeUpdated"/>
    </resultMap>
    <select id="selectByTimeFuzzyQuery" parameterType="com.cascv.oas.server.energy.model.EnergyBall"
            resultMap="BaseResultMap">
        select * FROM energy_ball
        <where>
            user_uuid = #{userUuid} and point_source = #{status} and time_created like #{timeCreated}"%"
        </where>
    </select>

    <select id="selectByStatus" resultMap="BaseResultMap">
      select * from energy_ball where status = #{status}
    </select>

    <select id="selectByPointSourceCode" parameterType="com.cascv.oas.server.energy.model.EnergyBall" resultMap="BaseResultMap">
        select * from energy_ball where user_uuid = #{userUuid} and point_source = #{pointSource}
    </select>

    <update id="updateEnergyBallStatusById" parameterType="com.cascv.oas.server.energy.model.EnergyBall">
        update energy_ball set `status` = #{status}, time_updated = #{timeUpdated} WHERE uuid = #{uuid}
    </update>

    <insert id="insertEnergyBall" parameterType="com.cascv.oas.server.energy.model.EnergyBall">
      insert into energy_ball (uuid, user_uuid, point_source, point, power_source, power, status,
      time_created, time_updated)
      values (#{uuid, jdbcType=VARCHAR}, #{userUuid,jdbcType=VARCHAR}, #{pointSource,jdbcType=INTEGER},
      #{point,jdbcType=DECIMAL}, #{powerSource,jdbcType=INTEGER}, #{power,jdbcType=DECIMAL},
      #{status,jdbcType=INTEGER}, #{timeCreated,jdbcType=VARCHAR}, #{timeUpdated,jdbcType=VARCHAR}
      )
    </insert>

    <select id="selectCheckinEnergyBalls" parameterType="com.cascv.oas.server.energy.model.EnergyBall" resultMap="EnergyBallWrapper">
        select b.uuid, b.point, b.time_created, b.time_updated, p.source_code, p.source_name
        from energy_ball b inner join energy_source_point p
        <where>
            point_source = source_code and point_source = #{pointSource} and user_uuid = #{userUuid}
        </where>
    </select>
    <resultMap id="EnergyBallWrapper" type="com.cascv.oas.server.energy.vo.EnergyBallWrapper">
        <id column="uuid" jdbcType="VARCHAR" property="uuid"/>
        <result column="point" jdbcType="DECIMAL" property="value"/>
        <result column="time_created" jdbcType="VARCHAR" property="startDate"/>
        <result column="time_updated" jdbcType="VARCHAR" property="endDate"/>
        <result column="source_code" property="type" />
        <result column="source_name" property="name" />
    </resultMap>
</mapper>