<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.energy.mapper.EnergyBallMapper">
    <resultMap id="BaseResultMap" type="com.cascv.oas.server.energy.model.EnergyBall">
        <id column="uuid" jdbcType="VARCHAR" property="uuid"/>
        <result column="user_uuid" jdbcType="VARCHAR" property="userUuid" />
        <result column="point_source" jdbcType="INTEGER" property="pointSource" />
        <result column="point" jdbcType="DECIMAL" property="point"/>
        <result column="power_source" jdbcType="INTEGER" property="powerSource"/>
        <result column="power" jdbcType="DECIMAL" property="power"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="time_created" jdbcType="VARCHAR" property="timeCreated"/>
        <result column="time_updated" jdbcType="VARCHAR" property="timeUpdated"/>
    </resultMap>

    <sql id="Base_Column_List">
        uuid, user_uuid, point_source, point, power_source, power, status, time_created, time_updated
    </sql>
    <!-- 根据能量球id查询 -->
    <select id="selectByUuid" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from energy_ball where uuid = #{uuid}
    </select>

    <!-- 某用户的某个积分来源、根据提供的时间模糊查询 -->
    <select id="selectByTimeFuzzyQuery" resultMap="BaseResultMap">
          select
        <include refid="Base_Column_List" />
          from energy_ball
        <where>
            <if test="userUuid != null">
                user_uuid = #{userUuid}
            </if>
            <if test="pointSourceCode != null">
                and point_source = #{pointSourceCode}
            </if>
            <if test="timeCreated != null">
                and time_created like #{timeCreated}"%"
            </if>
        </where>
    </select>

    <!-- 查询某用户某种积分的所有能量球 -->
    <select id="selectByPointSourceCode" resultMap="BaseResultMap">
          select
        <include refid="Base_Column_List" />
          from energy_ball
        <where>
            <if test="userUuid != null">
                user_uuid = #{userUuid}
            </if>
            <if test="pointSourceCode != null">
                and point_source = #{pointSourceCode}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!-- 查询某用户某种积分的最近更新的一个球 -->
    <select id="selectLatestOneByPointSourceCode" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from energy_ball
        <where>
            <if test="userUuid != null">
                user_uuid = #{userUuid}
            </if>
            <if test="pointSource != null">
                and point_source = #{pointSource}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by time_updated desc limit 1
    </select>

    <!-- 查询某用户某种积分的所有能量球 部分信息 -->
    <select id="selectPartByPointSourceCode" resultMap="EnergyBallWrapper">
        select
        <include refid="Part_Imformation_Of_EnergyBall" />
        from energy_ball b
        inner join energy_source_point p
        <where>
                point_source = source_code
            <if test="pointSourceCode != null">
                and point_source = #{pointSourceCode}
            </if>
            <if test="userUuid != null">
                and user_uuid = #{userUuid}
            </if>
        </where>
    </select>
    <sql id="Part_Imformation_Of_EnergyBall">
        b.uuid, b.point, b.time_created, b.time_updated, p.source_code, p.source_name
    </sql>
    <resultMap id="EnergyBallWrapper" type="com.cascv.oas.server.energy.vo.EnergyBallWrapper">
        <id column="uuid" property="uuid"/>
        <result column="point" property="value"/>
        <result column="time_created" property="startDate"/>
        <result column="time_updated"  property="endDate"/>
        <result column="source_code" property="type" />
        <result column="source_name" property="name" />
    </resultMap>

    <!-- 变更能量球的状态 -->
    <update id="updateStatusByUuid">
        update energy_ball
        set `status` = #{status}, time_updated = #{timeUpdated} WHERE uuid = #{uuid}
    </update>

    <!-- 变更能量球积分 -->
    <update id="updatePointByUuid">
        update energy_ball
        set point = #{point}, time_updated = #{timeUpdated} where uuid = #{uuid}
    </update>
    <!-- 插入能量球 -->
    <insert id="insertEnergyBall" parameterType="com.cascv.oas.server.energy.model.EnergyBall">
        insert into energy_ball (
        uuid,
        user_uuid,
        point_source,
        point,
        power_source,
        power,
        status,
        time_created,
        time_updated)
        values (
        #{uuid},
        #{userUuid},
        #{pointSource},
        #{point},
        #{powerSource},
        #{power},
        #{status},
        #{timeCreated},
        #{timeUpdated})
    </insert>

</mapper>