<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.blockchain.mapper.UserWalletDetailMapper">

  <resultMap id="userWalletDetailMap" type="com.cascv.oas.server.blockchain.model.UserWalletDetail">
	<id column="uuid" property="uuid" />
	<result column="user_uuid" property="userUuid"/>
	<result column="value" property="value" jdbcType="DECIMAL"/>
	<result column="title" property="title"/>
	<result column="sub_title" property="subTitle"/>
	<result column="in_or_out" property="inOrOut" jdbcType="INTEGER"/>
<!-- 	<result column="comment" property="comment"/> -->
	<result column="remark" property="remark"/>
<!-- 	<result column="change_user_name" property="changeUserName"/> -->
	<result column="created" property="created"/>
	<!-- <result column="tx_hash" property="txHash"/> -->
	<result column="tx_result" property="txResult"/>
	<!-- <result column="tx_network" property="txNetwork"/> -->
	<result column="oas_detail_uuid" property="oasDetailUuid"/>
  </resultMap>
  
  
  <sql id="Base_Column_List">
    uuid, user_uuid, value, title, sub_title,in_or_out, remark, created, tx_result, oas_detail_uuid
<!--     ,comment, change_user_name -->
  </sql>
  
  
  <!-- insert user -->
  <insert id="insertSelective" parameterType="com.cascv.oas.server.blockchain.model.UserWalletDetail">
    insert into user_wallet_detail
    <trim prefix="(" suffix=")" suffixOverrides=",">
    	uuid,
    	user_uuid,
    	value,
    	<if test="title != null">
    		title,
    	</if>
    	<if test="subTitle != null">
    		sub_title,
    	</if>
    	<if test="inOrOut != null">
    		in_or_out,
    	</if>
<!--     	<if test="comment != null"> -->
<!--     		comment, -->
<!--     	</if> -->
    	<if test="remark != null">
    		remark,
    	</if>
    	<!-- <if test="txHash != null">
    		tx_hash,
    	</if> -->
    	<if test="txResult != null">
    		tx_result,
    	</if>
    	<if test="oasDetailUuid != null">
    		oas_detail_uuid,
    	</if>
    	<!-- <if test="txNetwork != null">
    		tx_network,
    	</if> -->
<!--     	<if test="changeUserName != null"> -->
<!--     		change_user_name, -->
<!--     	</if> -->
    	created
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      #{uuid,jdbcType=VARCHAR},
      #{userUuid,jdbcType=VARCHAR},
      #{value,jdbcType=DECIMAL},
    	<if test="title != null">
    		#{title,jdbcType=VARCHAR},
    	</if>
    	<if test="subTitle != null">
    		#{subTitle,jdbcType=VARCHAR},
    	</if>
    	<if test="inOrOut != null">
    		#{inOrOut,jdbcType=INTEGER},
    	</if>
<!--     	<if test="comment != null"> -->
<!--     		#{comment,jdbcType=VARCHAR}, -->
<!--     	</if> -->
    	<if test="remark != null">
    		#{remark,jdbcType=VARCHAR},
    	</if>
    	<!-- <if test="txHash != null">
    		#{txHash,jdbcType=VARCHAR},
    	</if> -->
    	<if test="txResult != null">
    		#{txResult,jdbcType=INTEGER},
    	</if>
    	<if test="oasDetailUuid != null">
    		#{oasDetailUuid,jdbcType=VARCHAR},
    	</if>
    	<!-- <if test="txNetwork != null">
    		#{txNetwork,jdbcType=VARCHAR},
    	</if> -->
<!--     	<if test="changeUserName != null"> -->
<!--     		#{changeUserName,jdbcType=VARCHAR}, -->
<!--     	</if> -->
    		#{created,jdbcType=VARCHAR}
    </trim>
  </insert>

  <!-- delete by id -->
  <delete id="deleteByUuid" parameterType="java.lang.String">
    delete from user_wallet_detail where uuid = #{uuid}
  </delete>

  <!-- delete by userId -->
  <delete id="deleteByUserUuid" parameterType="java.lang.String">
    delete from user_wallet_detail where user_uuid = #{userUuid}
  </delete>
  
  <select id="selectCount" resultType="java.lang.Integer">
  	select count(*) from user_wallet_detail where user_uuid = #{userUuid};
  </select>
  
  <select id="selectByPage" resultMap="userWalletDetailMap">
  	select 
      <include refid="Base_Column_List" />
    from user_wallet_detail where user_uuid = #{userUuid} order by created desc limit #{offset},#{limit};
  </select>

  <select id="selectByUserUuid" parameterType="java.lang.String" resultMap="userWalletDetailMap">
  	select 
      <include refid="Base_Column_List" />
    from user_wallet_detail where user_uuid = #{userUuid};
  </select>
  
   <select id="selectByInOrOut" parameterType="com.cascv.oas.server.blockchain.model.UserWalletDetail" resultMap="userWalletDetailMap">
  	select 
      <include refid="Base_Column_List" />
    from user_wallet_detail where user_uuid = #{userUuid} and in_or_out = #{inOrOut} order by created desc limit #{offset},#{limit};
  </select>
  
  <select id="selectUserDailyTotalAmount" parameterType="com.cascv.oas.server.blockchain.model.UserWalletDetail" resultType="java.math.BigDecimal">
  	select 
      		sum(value) as value 
    from 
    		user_wallet_detail 
    where 
    		user_uuid = #{userUuid} and in_or_out = 0 and created like concat(#{created},'%')
    group by user_uuid;
  </select>
  
  <!-- <update id="updateByHash" parameterType="java.lang.String">
  update user_wallet_detail 
	<trim prefix=" set " suffix="" suffixOverrides=",">
		<if test = "txResult != 0">
			tx_result = #{txResult},
		</if>
	</trim>
	where tx_hash = #{txHash} 
  </update> -->
  <update id="updateByOasDetailUuid">
  update user_wallet_detail 
  <set>
  	<if	test="txResult != 0 ">
  		tx_result = #{txResult,jdbcType=INTEGER},
  	</if>
  </set>
  where oas_detail_uuid = #{oasDetailUuid,jdbcType=VARCHAR} 
  </update>
  
</mapper>



  
  