<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.blockchain.mapper.UserWalletDetailMapper">

  <resultMap id="userWalletDetailMap" type="com.cascv.oas.server.blockchain.model.EnergyPointDetail">
	<id column="uuid" property="uuid" />
	<result column="user_uuid" property="userUuid"/>
	<result column="value" property="value"/>
	<result column="scope" property="scope"/>
	<result column="name" property="name"/>
	<result column="comment" property="comment"/>
	<result column="created" property="created"/>
  </resultMap>
  
  
  <sql id="Base_Column_List">
    uuid, user_uuid, value, scope, name,comment, created
  </sql>
  
  
  <!-- insert user -->
  <insert id="insertSelective" parameterType="com.cascv.oas.server.blockchain.model.UserWalletDetail">
    insert into user_wallet_detail
    <trim prefix="(" suffix=")" suffixOverrides=",">
    	uuid,
    	user_uuid,
    	value,
    	<if test="scope != null">
    		scope,
    	</if>
    	<if test="name != null">
    		name,
    	</if>
    	<if test="comment != null">
    		comment,
    	</if>
    	created
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      #{uuid,jdbcType=VARCHAR},
      #{userUuid,jdbcType=INTEGER},
      #{value,jdbcType=INTEGER},
    	<if test="scope != null">
    		#{scope,jdbcType=VARCHAR},
    	</if>
    	<if test="name != null">
    		#{name,jdbcType=VARCHAR},
    	</if>
    	<if test="comment != null">
    		#{comment,jdbcType=VARCHAR},
    	</if>
    		#{created,jdbcType=VARCHAR}
    </trim>
  </insert>

  <!-- delete by id -->
  <delete id="deleteByUuid">
    delete from user_wallet_detail where uuid = #{uuid}
  </delete>

  <!-- delete by userId -->
  <delete id="deleteByUserUuid">
    delete from user_wallet_detail where user_uuid = #{userUuid}
  </delete>
  
  <select id="selectByDateRange" resultMap="userWalletDetailMap">
  	select 
      <include refid="Base_Column_List" />
    from user_wallet_detail where user_uuid = #{userUuid} and created between #{fromDate} and #{toDate} ordered by created desc;
  </select>

  <select id="selectByUserUuid" parameterType="java.lang.String" resultMap="userWalletDetailMap">
  	select 
      <include refid="Base_Column_List" />
    from user_wallet_detail where user_uuid = #{userUuid}
  </select>
  
</mapper>



  
  