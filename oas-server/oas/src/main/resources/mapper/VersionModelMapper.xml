<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.version.mapper.VersionModelMapper">
  <resultMap id="versionModelMap" type="com.cascv.oas.server.version.model.VersionModel">
	<id column="uuid" property="uuid" />
	<result column="version_code" property="versionCode"/>
	<result column="version_status" property="versionStatus"/>
	<result column="app_url" property="appUrl"/>
	<result column="created" property="created"/>
  </resultMap>
 
  <sql id="Base_Column_List">
    uuid, version_code, version_status,app_url,created
  </sql>
  
  <!-- insert app -->
  <insert id="insertApp" parameterType="com.cascv.oas.server.version.model.VersionModel">
    <selectKey keyProperty="uuid" order="AFTER" resultType="java.lang.String">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into version_info
    <trim prefix="(" suffix=")" suffixOverrides=",">
      uuid,
      <if test="versionCode!= null">
        version_code,
      </if>
      <if test="versionStatus!= null">
        version_status,
      </if>
      <if test="appUrl!= null">
        app_url,
      </if>
        created,
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      #{uuid,jdbcType=VARCHAR},
      <if test="versionCode!= null">
        #{version_code,jdbcType=VARCHAR},
      </if>
      <if test="versionStatus!= null">
        #{version_status,jdbcType=VARCHAR},
      </if>
      <if test="appUrl!= null">
        #{app_url,jdbcType=VARCHAR},
      </if>
        #{created,jdbcType=VARCHAR},
    </trim>
   </insert>
  
  <!-- delete app -->
  <delete id="deleteApp" parameterType="java.lang.String">
    delete from version_info where uuid = #{uuid}
  </delete>

  <select id="selectAllApps" resultMap="versionModelMap">
  	select 
  	<include refid="Base_Column_List" />
  	from version_info order by created desc;
  </select>
  
	<!-- Name:upadateApp -->
	<!-- Author:yangming -->
	<!-- Date:2018.09.25 -->
    <update id="upadateApp" parameterType="com.cascv.oas.server.version.model.VersionModel"> 
      update version_info 
      <trim prefix="SET" suffixOverrides=",">
      <if test="versionCode!= null">
       version_code = #{versionCode},
      </if>
      <if test="versionStatus!= null">
       version_status = #{versionStatus},
      </if>
      <if test="appUrl!= null">
       app_url = #{appUrl},
      </if>
    </trim>
      where uuid = #{uuid}
    </update>
    
</mapper>

