<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.blockchain.mapper.EthContractMapper">

  <resultMap id="ethContractMap" type="com.cascv.oas.server.blockchain.model.EthContractModel">
	<id column="name" property="name" />
	<result column="address" property="address"/>
	<result column="description" property="description"/>
  </resultMap>
  
  <sql id="Base_Column_List">
    name, address, description
  </sql>

  
  <!-- insert selective -->
  <insert id="insertSelective" parameterType="com.cascv.oas.server.blockchain.model.EthContractModel">
    insert into eth_contract
      <trim prefix="(" suffix=")" suffixOverrides=",">
          name,
          address,
        
        <if test="description != null">
          description,
        </if>
      </trim>
      <trim prefix="values (" suffix=")" suffixOverrides=",">
        #{name,jdbcType=VARCHAR},
        #{address,jdbcType=VARCHAR},
        <if test="description != null">
  		    #{description,jdbcType=VARCHAR},
        </if>
      </trim>
  </insert>
 
  <select id="selectByName" parameterType="java.lang.String" resultMap="ethContractMap">
  	select 
      <include refid="Base_Column_List" />
    from eth_contract where name = #{name}
  </select>

  <select id="selectAll" resultMap="ethContractMap">
  	select 
      <include refid="Base_Column_List" />
    from eth_contract
  </select>
  
  <!-- delete by name -->
  <delete id="deleteByName">
    delete from eth_contract where name = #{name}
  </delete>


</mapper>