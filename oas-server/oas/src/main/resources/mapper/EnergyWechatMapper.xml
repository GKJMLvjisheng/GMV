<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cascv.oas.server.energy.mapper.EnergyWechatMapper">

  <resultMap id="wechatModelMap" type="com.cascv.oas.server.energy.model.EnergyWechatModel">
	<id column="uuid" property="uuid" />
	<result column="user_uuid" property="userUuid"/>
	<result column="wechat_openid" property="wechatOpenid"/>
  	<result column="created" property="created"/>
  </resultMap>
 
  <select id="findWechatRecordByUserUuid" resultMap="wechatModelMap">
    select 
		wechat_openid,
		created from user_wechat
    	where user_uuid = #{userUuid} 
  </select>
  
     <!-- insert wechatRecord -->
    <insert id="insertWechatRecord" parameterType="com.cascv.oas.server.energy.model.EnergyWechatModel">
    insert into user_wechat(
        uuid,
        user_uuid,
        wechat_openid,
        created
	)  values (
      #{uuid,jdbcType=VARCHAR},
      #{userUuid,jdbcType=VARCHAR},
      #{wechatOpenid,jdbcType=VARCHAR},
	  #{created,jdbcType=VARCHAR}
	)
  </insert>
</mapper>

